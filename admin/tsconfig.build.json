{
  "extends": "./tsconfig",
  "include": [
    "./src", // Include all source files
    "./custom.d.ts" // Include custom type definitions
  ],
  "exclude": [
    "**/*.test.ts", // Exclude test files
    "**/*.test.tsx" // Exclude test files (TypeScript + JSX)
  ],
  "compilerOptions": {
    "rootDir": "../", // Set root directory to the plugin folder
    "baseUrl": ".", // Base URL for module resolution
    "outDir": "./dist" // Output directory for compiled files
  }
}
