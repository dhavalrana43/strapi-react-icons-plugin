{
  "extends": "./tsconfig",
  "include": [
    "./src", // Include all source files
    "server/**/*.json" // Include JSON files in the server folder
  ],
  "exclude": [
    "**/*.test.ts" // Exclude test files
  ],
  "compilerOptions": {
    "rootDir": "../", // Set root directory to the plugin folder
    "baseUrl": ".", // Base URL for module resolution
    "outDir": "./dist" // Output directory for compiled files
  }
}
